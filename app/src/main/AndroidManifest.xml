<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danil.savecosmocanyon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SaveCosmoCanyon"
        android:configChanges="keyboardHidden|orientation|screenSize">

        <activity
            android:name="com.danil.savecosmocanyon.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.danil.savecosmocanyon.GameActivity"
            android:label="@string/game_activity_name"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name="com.danil.savecosmocanyon.HelpActivity"
            android:label="@string/help_activity_name"
            android:screenOrientation="landscape">
        </activity>

    </application>

</manifest>